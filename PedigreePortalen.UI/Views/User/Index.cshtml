@model IEnumerable<PedigreePortalen.UI.Models.UserViewModel.UserCreate>


@{
    ViewData["Title"] = "Index";
}

<h1 id="customer_index_headline">Kundeoversigt</h1>

<p>
    <a asp-action="Create">Opret ny kunde</a>
</p>
<form asp-controller="User" asp-action="Index">
    <p>
        Søg på kundenavn: <input type="text" name="SearchString">
        <input type="submit" value="Søg" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Navn
            </th>
            <th>
                Adresse
            </th>
            <th>
                Telefonnummer
            </th>
            <th>
                Email
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId">Ret</a> |
                    <a asp-action="Details" asp-route-id="@item.UserId">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserId">Slet</a>
                </td>
            </tr>
        }
    </tbody>
</table>
